<div class="container-fluid" >
	<%= form_for @paste, :html => {:class => "form-group"} do |form| %>
		<form>
		  <div class="form-group row">
		  	<div class="col-4">
		    	<label><%= form.label :title %></label>
		    	<div> <%= form.text_field :title, :class => 'form-control'%> </div>
			</div>
		  </div>

		  <div class="form-group row">
		  	<div class = "col-10" id="content">
		    	<label><%= form.label :content %> </label>
		    	<div><%= form.text_area :content, :class => 'form-control' %></div>
		    </div>
		  </div>

		  <%= form.submit :class => 'btn btn-primary' %>
		  <small id="PasteHelp" class="form-text text-muted">If you're not logged in, you will not be able to edit or delete your pastes in the future.</small>

		</form>
	<% end %>
</div>
