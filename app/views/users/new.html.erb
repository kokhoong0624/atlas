<h1> Sign up! </h1>

<%= form_with scope: :user, url: users_path, local: true do |form| %>
<p>
	<%= form.label :username %><br>
	<%= form.text_field :username %>
</p>

<p>
	<%= form.label :email %><br>
	<%= form.text_field :email %>
</p>

<p>
	<%= form.label :password %><br>
	<%= form.password_field :password %>
</p>

<p>
	<%= form.submit "Submit" %>
</p>

<% end %>